---
import Subheader from "../components/Subheader.astro";
import Layout from "../layouts/Layout.astro";
import P from "../components/P.astro";
import Card from "../components/Card.astro";

export type CardDetails = {
  title: string;
  github: string;
  website?: string;
  builtUsing: string[];
  description: string;
};

const projects: CardDetails[] = [
  {
    title: "Pineapple Chess Engine",
    github: "https://github.com/swiderskis/pineapple-chess-engine",
    builtUsing: ["Rust 🦀"],
    description:
      "A chess engine written in Rust, designed to work with the Universal Chess Interface ♟",
  },
  {
    title: "io.chat",
    github: "https://github.com/swiderskis/io-chat",
    website: "https://io-chat.swider.ski/",
    builtUsing: ["Typescript ⌨", "Next.js 🌌", "PostgreSQL 🗃"],
    description:
      "A chat app that allows you to message your friends in real time 📲",
  },
  {
    title: "Asteroids",
    github: "https://github.com/swiderskis/asteroids-clone",
    builtUsing: ["C++ 💻", "Raylib 💫"],
    description:
      "A clone of the classic asteroids game, powered by the Raylib library ️️️️️☄️",
  },
  {
    title: "Personal Website",
    github: "https://github.com/swiderskis/swiderskis.github.io",
    website: "https://www.swider.ski/",
    builtUsing: ["Astro 🚀", "Tailwind 🕊"],
    description:
      "The website you're looking at now! Powered by GitHub Pages 📄",
  },
];
---

<Layout title="Sebastian Świderski">
  <main class="flex justify-center py-2">
    <div class="w-full px-4 text-xl md:max-w-6xl">
      <section id="about-me">
        <div class="flex justify-center py-2">
          <img
            src="me.png"
            alt="Me!"
            class="h-48 w-48 rounded-full border-4 border-gray-900 drop-shadow-lg"
          />
        </div>
        <Subheader>Hi!</Subheader>
        <P>
          My name is Sebastian. I'm a C Software Developer, currently working at
          FIS Global. Welcome to my website!
        </P>
      </section>
      <section id="featured-projects">
        <Subheader>Featured projects</Subheader>
        <div class="flex w-full flex-row flex-wrap justify-center py-2">
          {projects.map((project) => <Card cardDetails={project} />)}
        </div>
      </section>
    </div>
  </main>
</Layout>
