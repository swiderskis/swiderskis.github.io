---
import Subheader from "../components/Subheader.astro";
import Layout from "../layouts/Layout.astro";
import P from "../components/P.astro";
import Card from "../components/Card.astro";

export type CardDetails = {
  title: string;
  github: string;
  website?: string;
  builtUsing: string[];
  description: string;
};

const projects: CardDetails[] = [
  {
    title: "io.chat",
    github: "https://github.com/swiderskis/io-chat",
    website: "https://io-chat.swider.ski/",
    builtUsing: ["Typescript ⌨", "Next.js 🌌", "PostgreSQL 🗃"],
    description:
      "A chat app that allows you to message your friends in real time 📲",
  },
  {
    title: "Workout Tracker",
    github: "https://github.com/swiderskis/workout-tracker-client",
    website: "https://workout-tracker.swider.ski/",
    builtUsing: ["Typescript ⌨", "React ⚛", "PostgreSQL 🗃"],
    description:
      "A workout tracker app, allowing gymgoers can keep track of their workouts 🏋️‍♂️",
  },
  {
    title: "Chess",
    github: "https://github.com/swiderskis/chess-improved",
    website: undefined,
    builtUsing: ["C++ 💻"],
    description:
      "A console program, allowing two players face off in a game of chess ♟",
  },
  {
    title: "Taskmaster",
    github: "https://github.com/swiderskis/flask-taskmaster-webapp",
    website: undefined,
    builtUsing: ["Flask 🧪", "SQLAlchemy ⚗"],
    description:
      "A taskmaster app, allowing busy people to maintain a to-do list 📝",
  },
  {
    title: "Personal Website",
    github: "https://github.com/swiderskis/swiderskis.github.io",
    website: "https://www.swider.ski/",
    builtUsing: ["Astro 🚀", "Tailwind 🕊"],
    description:
      "The website you're looking at now! Powered by GitHub Pages 📄",
  },
];
---

<Layout title="Sebastian Świderski">
  <main class="flex justify-center py-2">
    <div class="w-full px-4 text-xl md:max-w-6xl">
      <section id="about-me">
        <div class="flex justify-center py-2">
          <img
            src="me.png"
            alt="Me!"
            class="h-48 w-48 rounded-full border-4 border-gray-900 drop-shadow-lg"
          />
        </div>
        <Subheader>Hi!</Subheader>
        <P>
          My name is Sebastian. I'm an Implementation Consultant, currently
          working at FIS Global. Welcome to my website!
        </P>
      </section>
      <section id="featured-projects">
        <Subheader>Featured projects</Subheader>
        <div class="flex w-full flex-row flex-wrap justify-center py-2">
          {projects.map((project) => <Card cardDetails={project} />)}
        </div>
      </section>
    </div>
  </main>
</Layout>
