---
import P from "./P.astro";
import Subheader from "./Subheader.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="rounded-lg border-2 border-gray-900 bg-gray-600 px-4 py-2 drop-shadow-lg duration-150 hover:ring-2 hover:ring-lime-900 hover:ease-in"
>
  <Subheader>{title}</Subheader>
  <P>
    <slot />
  </P>
</div>
