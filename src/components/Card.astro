---
import P from "./P.astro";
import Subheader from "./Subheader.astro";

export interface Props {
  title: string;
  github: string;
  website?: string;
}

const { title, github, website } = Astro.props;
---

<div
  class="group relative overflow-hidden rounded-lg border-2 border-gray-900 bg-gradient-to-b from-slate-500 to-slate-600 px-4 py-2 drop-shadow-lg duration-150 hover:ring-2 hover:ring-lime-900 hover:ease-in"
>
  <Subheader>{title}</Subheader>
  <P>
    <slot />
  </P>
  {/* Desktop */}
  <div
    class="absolute h-full w-full -translate-x-4 translate-y-4 border-4 border-black bg-black text-center text-opacity-100 opacity-80 ring-4 ring-black group-hover:-translate-y-[95%] group-hover:transition group-hover:duration-150"
  >
    <div class="flex h-full items-center justify-center">
      <div>
        <span class="w-full select-none">
          <a
            href={github}
            target="_blank"
            rel="noreferrer noopener"
            class="text-3xl"
          >
            GitHub
          </a>
        </span>
        {
          website ? (
            <p class="select-none">
              <a
                href={website}
                target="_blank"
                rel="noreferrer noopener"
                class="text-3xl"
              >
                Website
              </a>
            </p>
          ) : null
        }
      </div>
    </div>
  </div>
</div>
