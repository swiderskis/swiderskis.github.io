---
import P from "./P.astro";
import Subheader from "./Subheader.astro";

export interface Props {
  title: string;
  github: string;
  website?: string;
}

const { title, github, website } = Astro.props;
---

<div
  class="group relative overflow-hidden rounded-lg border-2 border-gray-900 bg-gradient-to-b from-slate-500 to-slate-600 px-4 py-2 drop-shadow-lg md:duration-150 md:hover:ring-2 md:hover:ring-lime-900 md:hover:ease-in"
>
  <Subheader>{title}</Subheader>
  <P>
    <slot />
  </P>
  {/* Desktop */}
  <div
    class="absolute hidden -translate-x-4 -translate-y-4 px-56 pb-20 pr-60 pt-12 text-opacity-100 opacity-80 group-hover:-translate-y-36 group-hover:bg-black group-hover:transition group-hover:duration-150 lg:block"
  >
    <span class="select-none">
      <a
        href={github}
        target="_blank"
        rel="noreferrer noopener"
        class="text-3xl"
      >
        GitHub
      </a>
    </span>
    {
      website ? (
        <span class="select-none">
          <a
            href={website}
            target="_blank"
            rel="noreferrer noopener"
            class="text-3xl "
          >
            Website
          </a>
        </span>
      ) : null
    }
  </div>
</div>
